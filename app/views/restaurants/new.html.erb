<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>New Restaurant</title>
</head>
<body>
  <ul>
    <% if @restaurant.errors.any? %>
      <% @restaurant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    <% end %>
  </ul>

  <h1>Create a new restaurant</h1>
  <%= form_for @restaurant do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :address %>
    <%= f.text_field :address %>

    <%= f.label :city %>
    <%= f.text_field :city %>

    <%= f.label :state %>
    <%= f.text_field :state %>

    <%= f.label :zip_code %>
    <%= f.text_field :zip_code %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.label :category %>
    <%= f.text_field :category %>

    <%= f.submit "Submit Restaurant" %>
  <% end %>

</body>
</html>
